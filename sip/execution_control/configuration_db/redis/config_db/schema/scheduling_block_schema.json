{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Scheduling Block Instance",
    "description": "Schema for an SKA Scheduling Block Instance",
    "version":  "0.3",
    "type": "object",

    "properties": {
        "scheduling_block_id": {
            "description": "[date]-[project]-[type][id] for the scheduling block id",
            "type": "string",
            "pattern": "^[0-9]{8}-[a-z]+-sb[0-9]+$"
        },
        "name": {
            "description": "Optional name string",
            "type": "string"
        },
        "id": {
            "description": "[date]-[project]-[type][id] for the scheduling block instance id",
            "type": "string",
            "pattern": "^[0-9]{8}-[a-z]+-sbi[0-9]+$"
        },
        "type": {
            "description": "Type of scheduling block",
            "type": "string"
        },
        "date": {
            "description": "YYYYmmdd for the date",
            "type": "string",
            "pattern": "^[0-9]{4}/[0-9]{2}/[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}"
        },
        "sub_array_id": {
            "description": "[type][id] for the sub array id",
            "type": "string",
            "pattern": "^subarray[0-9]+$"
        },
        "status": {
            "description": "Status of the scheduling block instance",
            "type": "string"
        },
        "version": {
            "description": "Version of the scheduling block instance",
            "type": "string"
        },
        "project": {
            "description": "Project of the scheduling block instance",
            "type": "string"
        },
        "processing_blocks" : {"$ref": "#/definitions/blocks"}
    },

    "required": ["scheduling_block_id", "id", "sub_array_id", "processing_blocks"],

    "definitions": {
        "blocks": {
            "description": "Array of processing blocks associated with this scheduling block",
            "type": "array",
            "items": {
                "description": "Processing block specification - description of required processing",
                "type": "object",
                "properties": {
                    "id": {
                        "description": "[project]-[type][id] for the processing block",
                        "type": "string",
                        "pattern": "^[a-z]+-[a-z]+[0-9]+$"
                    },
                    "type": {
                        "description": "[real-time, batch]",
                        "type": "string"
                    },
                    "template": {
                        "description": "Template for processing block",
                        "type": "string"
                    },
                    "priority": {
                        "description": "The Priority of the processing block",
                        "type": "number"
                    },
                    "status": {
                        "description": "Status of the processing block",
                        "type": "string"
                    },
                    "workflow": {
                        "$ref": "#/definitions/workflow"
                    }
                },
                "required": ["id"]
            }
        },

        "resource_requirement": {
            "description": "Resource required for the processing block, min/max",
            "type": "object",
            "properties": {
                "storage_type": {
                    "description": "Hot or cold buffer storage type",
                    "type": "string"
                }
            }
        },

        "assigned_resources": {
            "description": "Resource allocated for the processing block",
            "type": "object",
            "properties": {
                "status": {
                    "description": "Status of the resource assigned",
                    "type": "string"
                }
            }
        },

        "execution_engine_parameters": {
            "description": "Execution Engine parameters, docker-compose file",
            "type": "object",
            "properties": {
                "param1": {
                    "description": "Placeholder",
                    "type": "string"
                }
            }
        },

        "configuration": {
            "description": "Detailed config needed by the workflow script/stage",
            "type": "object",
            "properties": {
                "config1": {
                    "description": "Placeholder",
                    "type": "string"
                }
            }
        },

        "workflow": {
            "description": "Workflow stage",
            "type": "array",
            "properties": {
                "type": {
                    "description": "[stage, data, recv, vis, ical, vl]",
                    "type": "string"
                },
                "status": {
                    "description": "Status of the workflow stage",
                    "type": "string"
                },
                "resources_requirement": {
                    "$ref": "#/definitions/resource_requirement"
                },
                "assigned_resources": {
                    "$ref": "#/definitions/assigned_resources"
                },
                "execution_engine_parameters": {
                    "$ref": "#/definitions/execution_engine_parameters"
                },
                "configuration": {
                    "$ref": "#/definitions/configuration"
                }
            },
            "required": ["type", "resources_requirement", "execution_engine_parameters", "configuration"]
        }
    }
}